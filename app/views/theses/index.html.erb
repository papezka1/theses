<p id="notice"><%= notice %></p>

<h1>Listing Theses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Abstract</th>
      <th>Author</th>
      <th>Faculty</th>
      <th>Defended</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theses.each do |thesis| %>
      <tr>
        <td><%= link_to thesis.title, thesis %></td>
        <td><%= truncate(thesis.abstract, :length => 50) %></td>
        <td>
          <% if thesis.person %>
            <%= link_to(thesis.person) do %>
              <%=thesis.person.firstname%>
              <%=thesis.person.lastname%>
              (<%=thesis.person.username%>)
            <% end %>
          <% else %>
            N/A
          <% end %>
        </td>
        <td><%= thesis.faculty.try!(:name) %></td>
        <td><%= thesis.defended %></td>
        <td><%= link_to 'Show', thesis %></td>
        <td><%= link_to 'Edit', edit_thesis_path(thesis) %></td>
        <td><%= link_to 'Destroy', thesis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

